@model ASP.Models.ReservationViewModel

@{
    ViewData["Title"] = "Create";
}

@{
    var today = DateTime.Now.Date;
    var minDate = new DateTime(today.Year, 1, 1);
    var maxDate = new DateTime(today.Year, 12, 31);
}
<script>
    function itemValidator(date) {
        var weekday = date.getDay();
        return weekday != 0 && weekday != 6;
    }
</script>
<div>
    <c1-calendar value="@today" min="@minDate" max="@maxDate" item-validator="itemValidator" width="300px">
    </c1-calendar>
</div>;





<h1>Create</h1>

<h4>ReservationViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReservationDate" class="control-label"></label>
                <input asp-for="ReservationDate" class="form-control" value="@today" min="@minDate" max="@maxDate" item-validator="itemValidator" width="300px" />
                <!--  <span asp-validation-for="ReservationDate" class="text-danger"></span>-->
            </div>
            <div class="form-group">
                <label asp-for="ReservationDateEnd" class="control-label"></label>
                <input asp-for="ReservationDateEnd" class="form-control" value="@today" min="@minDate" max="@maxDate" item-validator="itemValidator" width="300px" />
                <!--  <span asp-validation-for="ReservationDateEnd" class="text-danger"></span> -->
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

